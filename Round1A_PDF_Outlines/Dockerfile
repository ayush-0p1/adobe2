# syntax=docker/dockerfile:1
FROM --platform=linux/amd64 python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1     PYTHONUNBUFFERED=1     PIP_NO_CACHE_DIR=1

WORKDIR /app

COPY requirements.txt /app/
RUN apt-get update && apt-get install -y --no-install-recommends       build-essential       libglib2.0-0 libxext6 libsm6 libxrender1     && rm -rf /var/lib/apt/lists/*     && pip install --no-cache-dir -r requirements.txt

COPY config /app/config
COPY src /app/src
COPY scripts /app/scripts

CMD ["python", "-m", "src.main", "--input_dir", "/app/input", "--output_dir", "/app/output", "--config", "/app/config/config.yaml"]
